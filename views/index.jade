extends layout

block content
	form(class="form-horizontal" role="form")
		div(class="form-group")
			label(for="inputMeetingID" class="col-sm-2 control-label") Meeting ID
			div(class="col-sm-10")
				input(type="text" class="form-control" id="inputMeetingID" placeholder="Meeting ID")

		div(class="form-group")
			label(for="inputSessionID" class="col-sm-2 control-label") Session ID
			div(class="col-sm-10")
				input(type="text" class="form-control" id="inputSessionID" placeholder="Session ID")
		div(class="form-group")
			div(class="col-sm-offset-2 col-sm-10")
				div(class="checkbox")
					label
						input(type="checkbox") 
					p Remember

		div(class="form-group")
			div(class="col-sm-offset-2 col-sm-10")
				button(type="submit" class="btn btn-default") Send 
				p(class="event-type") Send User Join Event
